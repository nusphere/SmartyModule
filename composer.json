{
    "name": "maglnet/smarty-module",
    "description": "Smarty template engine module for Laminas 3",
    "homepage": "https://github.com/maglnet/SmartyModule",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laminas",
        "module",
        "smarty",
        "view"
    ],
    "config": {
        "allow-plugins": false
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "laminas/laminas-view": "^2.11",
        "laminas/laminas-servicemanager": "^3.5",
        "laminas/laminas-eventmanager": "^3.2",
        "smarty/smarty": "~3.1 | ^4.0",
        "laminas/laminas-dependency-plugin": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "laminas/laminas-modulemanager": "^2.9",
        "laminas/laminas-mvc": "^3.0",
        "laminas/laminas-log": "^2.11",
        "laminas/laminas-i18n": "^2.10",
        "laminas/laminas-serializer": "^2.9"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "authors": [
        {
            "name": "Matthias Glaub",
            "email": "magl@magl.net"
        },
        {
            "name": "Murga Nikolay",
            "email": "work@murga.kiev.ua"
        },
        {
            "name": "Sebastian Hopfe",
            "email": "nusphere83@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SmartyModule\\": "src/SmartyModule/"
        }
    }
}
